#include<bits/stdc++.h>
using namespace std;

int main()
{
    int n, i, j, k, l;
    cin >> n;

    for(i = 1; i <= n; i++)
    {
        for(j = n; j > i; j--)
        {
            cout << " ";
        }

        for(k = 1; k <= i; k++)
        {
            cout << "*";
        }

        for(l = 2; l <= i; l++)
        {
            cout << '*';
        }

        cout << endl;
    }

    return 0;
}
